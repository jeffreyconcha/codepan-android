<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CalendarView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black_trans_forty"
    android:layout_height="match_parent">

    <com.codepan.widget.calendar.view.CalendarView
        android:layout_width="@dimen/three_hundred"
        android:layout_height="@dimen/five_hundred"
        CalendarView:titleFont="@string/calibri_bold"
        CalendarView:contentFont="@string/calibri_regular"
        CalendarView:contentPadding="@dimen/twenty"
        CalendarView:titlePadding="@dimen/two"
        CalendarView:contentTextSize="@dimen/ten"
        CalendarView:arrowIconHeight="@dimen/ten"
        CalendarView:arrowIconWidth="@dimen/seven"
        CalendarView:arrowSize="@dimen/thirty"
        CalendarView:buttonFont="@string/calibri_bold"
        CalendarView:buttonTextSize="@dimen/ten"
        CalendarView:buttonWidth="@dimen/seventy"
        CalendarView:dateTextSize="@dimen/seventeen"
        CalendarView:monthTextSize="@dimen/ten"
        CalendarView:titleTextSize="@dimen/ten"
        CalendarView:title="Select Date"
        CalendarView:selectedColor="#FD602F"
        CalendarView:yearTextSize="@dimen/ten"
        CalendarView:accentColor="#FD602F"/>

</RelativeLayout>